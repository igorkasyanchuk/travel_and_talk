%h1 Login

- semantic_form_for @user_session, :url => user_session_path do |f|
  = f.error_messages
  - f.inputs do
    = f.input :email
    = f.input :password
    = f.input :remember_me, :as => :boolean
  - f.buttons do
    = f.submit "Sign in"

.trailer
  = link_to 'Forgot your password?', new_password_reset_path
  %br
  = link_to 'Sign up', new_user_path